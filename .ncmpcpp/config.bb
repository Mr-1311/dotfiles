
# display
song_list_format = "%t"
# alternative -- song_columns_list_format = "(5)[]{}(55)[16]{t}"
song_columns_list_format = "(0)[16]{t}"
song_status_format = "$3%t"
playlist_display_mode = "columns"


# now playing
# alternative -- now_playing_prefix = "$3-"
now_playing_suffix = " $8;"


# playlist
browser_playlist_prefix = "$3 ♥ $3 "


# delays
playlist_disable_highlight_delay = "1"
message_delay_time= "1"


# progress bar
progressbar_look = "───"
# progressbar_color = "black"
progressbar_elapsed_color = "yellow"


# colors
colors_enabled = "yes"
empty_tag_color = "white"
statusbar_color = "white"
state_line_color = "white"
state_flags_color = "white"
main_window_color = "white"
header_window_color = "white"


# misc
display_bitrate = "no"
autocenter_mode = "yes"
centered_cursor = "yes"
titles_visibility = "no"
statusbar_visibility = "no"
mouse_support = "no"
header_visibility = "no"
display_remaining_time = "no"
ask_before_clearing_playlists = "yes"
discard_colors_if_item_is_selected = "yes"
allow_for_physical_item_deletion = "yes"
seek_time = 5


# visualizer
visualizer_in_stereo = "yes"
visualizer_sync_interval = "128"
visualizer_output_name = "fifo"
visualizer_fifo_path = "/tmp/mpd.fifo"
visualizer_type = "spectrum" (spectrum/wave)
# visualizer_sample_multiplier = 0.20
visualizer_color = "white"
visualizer_look = "∙│"